<Screen>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition>*</RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>*</ColumnDefinition>
            <ColumnDefinition>25%</ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="1">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition>Auto</RowDefinition>
                    <RowDefinition>Auto</RowDefinition>
                    <RowDefinition>Auto</RowDefinition>
                    <RowDefinition>Auto</RowDefinition>
                    <RowDefinition>Auto</RowDefinition>
                    <RowDefinition>Auto</RowDefinition>
                    <RowDefinition>*</RowDefinition>
                    <RowDefinition>Auto</RowDefinition>
                    <RowDefinition>Auto</RowDefinition>
                    <RowDefinition>Auto</RowDefinition>
                    <RowDefinition>Auto</RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition>*</ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label FontColor="0,0,0" Text="Node properties" Grid.Row="0" Grid.Column="0" FontSize="0.5" Margin="10"/>

                <Label Id="lbNodePosition" FontColor="0,0,0" Text="Position: None" Grid.Row="1" Grid.Column="0" FontSize="0.4"/>

                <Label FontColor="0,0,0" Text="COMMANDS" Grid.Row="2" Grid.Column="0" FontSize="0.5" Margin="5"/>
                <Button Id="btnDeleteNode" FontColor="1,0,0" FontSize="0.5" Grid.Row="3" Grid.Column="0"
                        Text="Delete node"/>
                <Button Id="btnRepositionNode" FontColor="0,0.2,0.8" FontSize="0.5" Grid.Row="4" Grid.Column="0"
                        Text="Reposition node"/>

                <Label FontColor="0,0,0" Text="SETTINGS" Grid.Row="5" Grid.Column="0" FontSize="0.5" Margin="5"/>

                <Label Id="lbSamples" FontColor="0,0,0" Text="Samples: 100" Grid.Row="7" Grid.Column="0" FontSize="0.3"/>
                <Button Id="addSamples" FontColor="0,0,0" FontSize="0.3" Grid.Row="8" Grid.Column="0"
                        Text="+100" />
                <Button Id="remSamples" FontColor="0,0,0" FontSize="0.3" Grid.Row="9" Grid.Column="0"
                        Text="-100"/>
                <Button Id="btnRebuildPreview" FontColor="0,0,0" FontSize="0.3" Grid.Row="10" Grid.Column="0"
                        Text="Rebuild preview"/>
            </Grid>
        </Border>
    </Grid>

</Screen>