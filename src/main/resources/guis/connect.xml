<Screen Background="textures/background.png">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition>0</RowDefinition>
            <RowDefinition>Auto</RowDefinition>
            <RowDefinition>Auto</RowDefinition>
            <RowDefinition>Auto</RowDefinition>
            <RowDefinition>Auto</RowDefinition>
            <RowDefinition>*</RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>*</ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ImageView Margin="10" Src="textures/logo.png" Grid.Row="1" HorizontalAlignment="Center"/>
        <TextBox Id="tbIpAddress" Margin="25" Hint="Server IP" Grid.Row="2" HorizontalAlignment="Center" Width="500"
                 Height="50" FontFamily="Title"/>
        <TextBox Id="tbNickname" Margin="25" Hint="Nickname" Grid.Row="3" HorizontalAlignment="Center" Width="500"
                 Height="50" FontFamily="Title"/>
        <Button Id="btnConnect" Margin="30" Grid.Row="4" Text="Verbinden" HorizontalAlignment="Center"
                FontFamily="Title"
                FontColor="187,255,255" Width="250" FontSize="0.9"/>
    </Grid>

</Screen>