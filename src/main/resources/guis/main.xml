<Screen Background="textures/background.png">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition>Auto</RowDefinition>
            <RowDefinition>Auto</RowDefinition>
            <RowDefinition>*</RowDefinition>
            <RowDefinition>Auto</RowDefinition>
            <RowDefinition>Auto</RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>*</ColumnDefinition>
            <ColumnDefinition>350</ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ImageView Src="textures/logo.png" Grid.Row="0" Grid.Column="0" Grid.ColSpan="2" HorizontalAlignment="Start"/>
        <TitleButton Id="btnStartRace" Margin="65,5" FontColor="98,210,249" FontSize="1.75" Text="Rennen starten"
                     Grid.Row="1" Grid.Column="0"/>
        <TitleButton Id="btnSettings" Margin="65,5" FontSize="1.75" Text="Einstellungen" Grid.Row="3" Grid.Column="0"/>
        <TitleButton Id="btnExitGame" Margin="65,0,5,65" FontSize="1.75" Text="Spiel verlassen" Grid.Row="4"
                     Grid.Column="0"/>
        <Border Grid.Row="1" Grid.RowSpan="4" Grid.Column="1">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition>Auto</RowDefinition>
                    <RowDefinition>Auto</RowDefinition>
                    <RowDefinition>Auto</RowDefinition>
                    <RowDefinition>Auto</RowDefinition>
                    <RowDefinition>Auto</RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition>*</ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Text="Steuerung" HorizontalAlinment="Center" FontSize="0.5"/>
                <Label Grid.Row="1" Text="Gas: W" FontSize="0.4"/>
                <Label Grid.Row="2" Text="Bremse: S" FontSize="0.4"/>
                <Label Grid.Row="3" Text="Links: A" FontSize="0.4"/>
                <Label Grid.Row="4" Text="Rechts: D" FontSize="0.4"/>
            </Grid>
        </Border>
    </Grid>

</Screen>